<div class="shadow-lg p-3 mb-5 bg-white rounded mb-3 mx-auto" style="width: 350px;">
<form class="form-signin" method="POST" action="index">
      <img class="mb-3 rounded mx-auto d-block" src="/img/user.svg" alt="login" width="72" height="72">
      <h1 class="h3 mb-3 font-weight-normal text-center">Área Restrita</h1>

      <label for="inputEmail" class="sr-only">Endereço de email</label>
      <input type="text" id="inputEmail" class="form-control mb-3" placeholder="Usuário" required="" autofocus="">
      
      <label for="inputPassword" class="sr-only">Senha</label>
      <input type="password" id="inputPassword" class="form-control mb-3" placeholder="Senha">
      <div class="checkbox mb-3 text-center">
        <label>
          <input type="checkbox" value="remember-me"> Lembrar de mim
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <p class="mt-5 mb-3 text-muted text-center">© 2020</p>
</form>
</div>